{
  "env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2021
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["error", 2],
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error",
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	},
	"settings": {
		"react": { "version": "detect" }
	}
}